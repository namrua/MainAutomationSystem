@{

    // creates base text input
    var metadata = new EditorTemplateMetadataProvider<dynamic>(ViewData);
    var name = metadata.Name;
    var id = metadata.Id;
    var typeaheadInput = TypeaheadInput.New(id, name, Model, null, metadata.Placeholder);

    // obtains pick input options and sets them to text input
    var pickInputOptions = metadata.GetAttribute<PickInputOptions>();

    // applyes typeahead input
    typeaheadInput.SetPickInputOptions(pickInputOptions);

}

@InputControl.AddTypeaheadDropDownInput(this, typeaheadInput)
@if (!metadata.NoErrorPlaceholder)
{
    <div id="@TextHelper.DecorateName(id, "error-placeholder")"></div>
}